<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <PackageId />
    <Title>SimplePagination</Title>
    <Authors>Marinos33</Authors>
    <Company />
    <Description>A Nuget package for .NET which allows you to use a simple but efficient pagination operation for a list of data using method extension</Description>
    <PackageProjectUrl>https://github.com/Marinos33/SimplePagination</PackageProjectUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <AssemblyName>Marinos33.SimplePagination</AssemblyName>
	<PackageLicenseExpression>MIT</PackageLicenseExpression>
	<RepositoryUrl>https://github.com/Marinos33/SimplePagination</RepositoryUrl>
	<PackageTags>EntityFramework; Pagination; Query; Extension</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.EntityFrameworkCore" Version="3.1.32" />
  </ItemGroup>

</Project>
